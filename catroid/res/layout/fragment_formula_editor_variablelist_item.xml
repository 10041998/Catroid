<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sound_fragment_background_color"
    android:longClickable="true"
    android:minHeight="60dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/fragment_formula_editor_variablelist_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="13dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/fragment_formulaeditor_item_main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sound_fragment_button_gradient"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragment_formula_editor_variablelist_item_name_text_view"
            style="@style/formulaeditor_variblelist_fragment_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/fragment_formula_editor_variablelist_colon_view"
            style="@style/formulaeditor_variblelist_fragment_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/formula_editor_colon"
            android:layout_toRightOf="@+id/fragment_formula_editor_variablelist_item_name_text_view" 
            android:layout_marginRight="5dp"/>
        
        <TextView
            android:id="@+id/fragment_formula_editor_variablelist_item_value_text_view"
            style="@style/formulaeditor_variblelist_fragment_variable_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/fragment_formula_editor_variablelist_colon_view" />
    </RelativeLayout>

</LinearLayout>