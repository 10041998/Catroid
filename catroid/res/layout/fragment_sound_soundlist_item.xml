<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sound_fragment_button_gradient"
    android:longClickable="true"
    android:minHeight="90dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/checkbox_linear_layout"
        android:layout_width="47dp"
        android:layout_height="match_parent"
        android:background="@color/sound_fragment_background_color"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/sound_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="21dp"
        android:paddingRight="28dp" >

        <ImageButton
            android:id="@+id/btn_sound_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sound_fragment_icon_border_inactive"
            android:contentDescription="@string/sound_play"
            android:src="@drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/btn_sound_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sound_fragment_icon_border_active"
            android:contentDescription="@string/sound_pause"
            android:src="@drawable/ic_media_pause" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sound_details"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sound_title"
            style="@style/sound_fragment_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/sound_details_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/sound_details_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/sound_length"
                    style="@style/sound_fragment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/length" />

                <TextView
                    android:id="@+id/sound_size_prefix"
                    style="@style/sound_fragment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sound_details_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="24dp" >

                <LinearLayout
                    android:id="@+id/sound_details_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Chronometer
                        android:id="@+id/sound_chronometer_time_played"
                        style="@style/sound_fragment_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sound_time_seperator"
                        style="@style/sound_fragment_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/sound_time_seperator"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sound_duration"
                        style="@style/sound_fragment_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sound_size"
                    style="@style/sound_fragment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>