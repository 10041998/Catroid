<!-- Menu buttons -->

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/stage_dialog_background_color"
    android:layout_weight="1" >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="4dp"
        android:background="@android:color/transparent" >

    <Button
        android:id="@+id/stage_dialog_button_back"
        style="@style/StageButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/stage_dialog_back"
        android:padding="4dp"
        android:text="@string/stage_dialog_back"
        android:textScaleX="0.7"
        android:textColor="@color/stage_dialog_text_color" />

    <Button
        android:id="@+id/stage_dialog_button_restart"
        style="@style/StageButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/stage_dialog_restart"
        android:padding="4dp"
        android:text="@string/stage_dialog_restart"
        android:textScaleX="0.7"
        android:textColor="@color/stage_dialog_text_color" />
    
    <Button
        android:id="@+id/stage_dialog_button_continue"
        style="@style/StageButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/stage_dialog_continue"
        android:padding="4dp"
        android:text="@string/stage_dialog_continue"
        android:textColor="@color/stage_dialog_text_color" />

    <Button
        android:id="@+id/stage_dialog_button_screenshot"
        style="@style/StageButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/stage_dialog_screenshot"
        android:padding="4dp"
        android:text="@string/stage_dialog_screenshot" 
        android:textScaleX="0.7"
        android:textColor="@color/stage_dialog_text_color" />

    <Button
        android:id="@+id/stage_dialog_button_toggle_axes"
        style="@style/StageButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:drawableTop="@drawable/stage_dialog_toggle_axes"
        android:padding="4dp"
        android:text="@string/stage_dialog_axes_on"
        android:textScaleX="0.7"
        android:textColor="@color/stage_dialog_text_color" />
    
    <!-- 
        <Button
            android:id="@+id/stage_dialog_button_maximize"
            style="@style/StageButton"
            android:drawableTop="@drawable/stage_dialog_maximize"
            android:text="@string/stage_dialog_maximize" >
        </Button>
    -->	    
    
</LinearLayout>

</HorizontalScrollView>
