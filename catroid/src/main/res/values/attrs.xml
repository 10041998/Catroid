<resources>
    <!-- Accessibility -->
    <!-- Font Sizes -->
    <declare-styleable name="FontSize">
        <attr name="small" format="dimension"/>
        <attr name="medium" format="dimension"/>
        <attr name="large" format="dimension"/>
        <attr name="x_large" format="dimension"/>
    </declare-styleable>

    <!-- Element Spacing -->
    <declare-styleable name="ElementSpacing">
        <attr name="element_spacing" format="dimension"/>
    </declare-styleable>

    <!-- Font -->
    <declare-styleable name="AppFont">
        <attr name="app_font" format="string"/>
    </declare-styleable>
    <!-- /Accessibility -->

    <declare-styleable name="BrickLayout">
        <attr name="customPadding" format="dimension"/>
        <attr name="horizontalSpacing" format="dimension"/>
        <attr name="verticalSpacing" format="dimension"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BrickLayout_Layout">
        <attr name="layout_textField" format="boolean"/>
        <attr name="layout_inputType" format="string"/>
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_customPadding" format="dimension"/>
        <attr name="layout_horizontalSpacing" format="dimension"/>
        <attr name="layout_verticalSpacing" format="dimension"/>
    </declare-styleable>
</resources>
